{
  "compileOnSave": false,
  "compilerOptions": {
    // Language Features
    "strict": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",

    // Module and Path Resolutions
    "baseUrl": ".",
    "typeRoots": ["./src/types", "./node_modules/@types"],

    // Interoperability and Helpers
    "esModuleInterop": true,
    "allowJs": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,

    // Decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Output Options
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,

    // Compiler Behavior
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["node_modules"]
}
